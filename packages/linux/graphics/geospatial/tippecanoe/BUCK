load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "tippecanoe",
    version = "2.22.0",
    description = "Build vector tilesets from large GeoJSON feature collections",
    homepage = "https://github.com/felt/tippecanoe",
    license = "BSD-2-Clause",
    deps = [
        "//packages/linux/system/libs/database/sqlite:sqlite",
        "//packages/linux/core/zlib:zlib",
    ],
    install_script = """
        cd $SRCS
        make -j${MAKEOPTS:-$(nproc)}
        mkdir -p $OUT/usr/bin
        cp tippecanoe tippecanoe-enumerate tippecanoe-decode tippecanoe-json-tool tile-join $OUT/usr/bin/
    """,
    visibility = ["PUBLIC"],
)
