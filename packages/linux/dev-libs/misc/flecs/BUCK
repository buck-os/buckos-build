load("//defs:package.bzl", "package")

# Flecs - Fast and lightweight Entity Component System (ECS)

package(
    build_rule = "cmake",
    name = "flecs",
    version = "3.2.12",
    source = "//third-party/flecs:flecs-3.2.12",
    description = "Fast and lightweight Entity Component System for building games and simulations",
    homepage = "https://github.com/SanderMertens/flecs",
    license = "MIT",
    deps = [],
    configure_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_SHARED_LIBS=ON",
        "-DFLECS_STATIC=ON",
        "-DFLECS_SHARED=ON",
        "-DFLECS_PIC=ON",
        "-DFLECS_TESTS=OFF",
    ],
    visibility = ["PUBLIC"],
)
