    name = "google-perftools",
    version = "2.6.1",
    use_configure = {
        "debug": ("--enable-debug", "--disable-debug"),
        "llvm-libunwind": ("--enable-llvm-libunwind", "--disable-llvm-libunwind"),
        "minimal": ("--enable-minimal", "--disable-minimal"),
        "optimisememory": ("--enable-optimisememory", "--disable-optimisememory"),
        "pagesize-128k": ("--enable-pagesize-128k", "--disable-pagesize-128k"),
        "pagesize-16k": ("--enable-pagesize-16k", "--disable-pagesize-16k"),
        "pagesize-256k": ("--enable-pagesize-256k", "--disable-pagesize-256k"),
        "pagesize-32k": ("--enable-pagesize-32k", "--disable-pagesize-32k"),
        "pagesize-64k": ("--enable-pagesize-64k", "--disable-pagesize-64k"),
        "static-libs": ("--enable-static", "--disable-static"),
    },
    url = "https://github.com/gperftools/gperftools/releases/download/gperftools-2.6.1/gperftools-2.6.1.tar.gz",
    sha256 = "38b467eb42a028f253d227fbc428263cb39e6c8687c047466aa2ce5bb4699d81",
