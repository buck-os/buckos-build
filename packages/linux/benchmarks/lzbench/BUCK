load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "lzbench",
    version = "1.8",
    description = "Lzbench - in-memory benchmark of lossless compression algorithms",
    homepage = "https://github.com/inikep/lzbench",
    license = "GPL-2.0",
    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/system/libs/compression/bzip2:bzip2",
        "//packages/linux/system/libs/compression/lz4:lz4",
        "//packages/linux/system/libs/compression/zstd:zstd",
    ],
    install_script = """
        cd $SRCS
        make -j${MAKEOPTS:-$(nproc)} lzbench
        mkdir -p $OUT/usr/bin
        cp lzbench $OUT/usr/bin/
    """,
    visibility = ["PUBLIC"],
)
