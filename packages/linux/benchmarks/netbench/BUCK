load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "netbench",
    version = "main",
    description = "Network benchmark tool with io_uring support",
    homepage = "https://github.com/dylanza/netbench",
    license = "N/A",
    deps = [
        "//packages/linux/dev-libs/boost:boost",
        "//packages/linux/system/libs/liburing:liburing",
    ],
    install_script = """
        cd $SRCS
        make -j${MAKEOPTS:-$(nproc)} CXXFLAGS="-g -O2 -std=c++2a -Wall" LDFLAGS="-lpthread -lboost_thread -lboost_system -lboost_program_options -luring"
        mkdir -p $OUT/usr/bin
        cp netbench $OUT/usr/bin/
    """,
    visibility = ["PUBLIC"],
)
