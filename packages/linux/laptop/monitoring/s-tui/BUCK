load("//defs:package.bzl", "package")

# s-tui - Stress Terminal UI
# Terminal UI for monitoring CPU temperature, frequency, power

package(
    build_rule = "binary",
    name = "s-tui",
    version = "1.1.6",
    description = "Stress Terminal UI for CPU monitoring and stress testing",
    homepage = "https://github.com/amanusk/s-tui",
    license = "GPL-2.0",
    install_script = """
        mkdir -p $OUT/usr/share/s-tui
        cp -r $SRCS/* $OUT/usr/share/s-tui/
    """,
    deps = [
        "//packages/linux/lang/python:python",
    ],
    visibility = ["PUBLIC"],
)
