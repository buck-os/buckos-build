load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "shellcheck",
    version = "0.10.0",
    description = "Shell script static analysis tool",
    homepage = "https://www.shellcheck.net/",
    license = "GPL-3",
    install_script = """
        cd $SRCS
        mkdir -p "$OUT/usr/bin"
        cp shellcheck "$OUT/usr/bin/"
        chmod +x "$OUT/usr/bin/shellcheck"
    """,
    visibility = ["PUBLIC"],
)
