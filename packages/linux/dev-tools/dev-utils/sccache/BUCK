load("//defs:package.bzl", "package")

package(
    build_rule = "binary",
    name = "sccache",
    version = "0.8.1",
    description = "Shared compilation cache with cloud storage support",
    homepage = "https://github.com/mozilla/sccache",
    license = "Apache-2.0",
    install_script = """
        cd $SRCS
        mkdir -p "$OUT/usr/bin"
        cp sccache "$OUT/usr/bin/"
        chmod +x "$OUT/usr/bin/sccache"
    """,
    visibility = ["PUBLIC"],
)
