load("//defs:package_defs.bzl", "cargo_workspace_package")

# Download BuckOS source from GitHub (shared across workspace members)
# Using 0.0.3 tag with NVMe partition naming fix
# BuckOS CLI - Command-line interface for BuckOS management
# Build v2: Using /lib64 library path fix
cargo_workspace_package(
    name = "buckos-cli",
    workspace_member = "buckos",  # Package name is "buckos", binary is "buckos-cli"
    version = "0.0.3",
    bins = ["buckos-cli"],
    description = "BuckOS command-line interface for system management",
    homepage = "https://github.com/hodgesds/buckos",
    license = "Apache-2.0 OR MIT",
    extra_install = """
# Create symlink so users can run 'buckos' instead of 'buckos-cli'
ln -sf buckos-cli "$DESTDIR/usr/bin/buckos"
""",
    deps = [
        "//packages/linux/system/libs/crypto/openssl:openssl",
    ],
    visibility = ["PUBLIC"],
)
